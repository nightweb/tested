- model_class = Picture
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:collection_id)
      %th= model_class.human_attribute_name(:file)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @pictures.each do |picture|
      %tr
        %td= link_to picture.id, picture_path(picture)
        %td= picture.collection_id
        %td= picture.file
        %td=l picture.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_picture_path(picture), :class => 'btn btn-primary btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), picture_path(picture), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger btn-xs'

= link_to t('.new', :default => t("helpers.links.new")), new_collection_picture_path(@collection), :class => 'btn btn-primary'
