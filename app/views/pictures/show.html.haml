- model_class = Picture
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:collection_id) + ':'
  %br
  = @picture.collection_id
%p
  %strong= model_class.human_attribute_name(:file) + ':'
  %br
  = @picture.file

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), collection_pictures_path(@collection), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_picture_path(@picture), :class => 'btn btn-primary'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), picture_path(@picture), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
